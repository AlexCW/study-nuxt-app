{
  "name": "study-app",
  "version": "1.0.0",
  "description": "Application to help document what I am studying",
  "author": "Alex Williams",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "ava": "ava -v",
    "jest": "jest ."
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "@nuxtjs/dotenv": "^1.3.0",
    "cross-env": "^5.2.0",
    "nuxt": "^2.0.0",
    "vee-validate": "^2.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@vue/test-utils": "^1.0.0-beta.28",
    "ava": "^0.19.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.11.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.0.0",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom": "^11.0.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.11.0",
    "sass-loader": "^7.1.0",
    "vue-jest": "^3.0.2"
  },
  "ava": {
    "files": [
      "tests/**/*.js",
      "!tests/snapshots/*.js"
    ],
    "sources": [
      "**/*.{js}"
    ],
    "compileEnhancements": false,
    "cache": true,
    "watch": true
  },
  "jest": {
    "testRegex": "spec.js$",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "watchman": false,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/components/**/*.vue",
      "<rootDir>/pages/*.vue"
    ]
  }
}
